# Zauction Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:8000
# For multiple allowed origins, separate with commas:
# FRONTEND_URL=https://your-frontend.up.railway.app,https://your-custom-domain.com

# PostgreSQL Database Configuration
# Option 1: Use individual connection parameters
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zauction_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false
# Set DB_SSL=true for hosted PostgreSQL providers that require SSL.
# When DATABASE_URL is used, DB_SSL still controls SSL behavior explicitly.

# Option 2: Use connection URL (Supabase, Railway Postgres, or other cloud providers)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Admin bootstrap (created/promoted on server startup)
ADMIN_BOOTSTRAP_ENABLED=true
ADMIN_EMAIL=admin@zauction.com
ADMIN_PASSWORD=admin123
ADMIN_FULL_NAME=Admin User
ADMIN_PHONE=

# Google OAuth
GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com

# Email OTP (Gmail SMTP)
GMAIL_USER=your-gmail-address@gmail.com
GMAIL_APP_PASSWORD=your-16-char-gmail-app-password
EMAIL_OTP_REQUIRED=false

# Optional WhatsApp OTP bridge (test mode)
# Requires whatsapp-integration backend running (default http://localhost:3001)
WHATSAPP_OTP_ENABLED=false
WHATSAPP_BRIDGE_URL=http://localhost:3001

# Automatic live-auction WhatsApp notifications
WHATSAPP_LIVE_NOTIFICATIONS_ENABLED=false
WHATSAPP_LIVE_NOTIFICATIONS_INTERVAL_MS=60000

# Bcrypt Configuration
BCRYPT_ROUNDS=10

# Cloudinary (for image/video uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Socket.IO Configuration
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000
